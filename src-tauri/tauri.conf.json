{
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist"
  },
  "package": {
    "productName": "Winnead",
    "version": "0.0.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "path": {
        "all": true
      },
      "dialog": {
        "all": true,
        "open": true,
        "save": true
      },
      "shell": {
        "sidecar": true,
        "scope": [
          {
            "name": "bin/nu",
            "sidecar": true,
            "args": [
              "-c",
              {
                "validator": ".*"
              }
            ]
          }
        ]
      },
      "fs": {
        "all": true,
        "readFile": true,
        "writeFile": true,
        "scope": [
          "**"
        ]
      },
      "process": {
        "exit": true
      },
      "window": {
        "all": false,
        "close": true,
        "hide": true,
        "show": true,
        "maximize": true,
        "minimize": true,
        "unmaximize": true,
        "unminimize": true,
        "startDragging": true
      }
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "Winnead",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "externalBin": [
        "bin/nu"
      ]
    },
    "security": {
      "csp": null
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "maximized": true,
        "minimizable": true,
        "maximizable": true,
        "closable": true,
        "decorations": false,
        "title": "Winnead",
        "width": 800,
        "height": 600
      }
    ]
  }
}